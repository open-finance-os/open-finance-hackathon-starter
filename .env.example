# ===================================
# ADCB & Nebras UAE Open Finance Hackathon
# Environment Configuration Template
# ===================================
# Copy this file to .env and fill in your credentials from Nebras

# -----------------------------
# Open Finance Sandbox Configuration
# (Provided by Nebras at hackathon kickoff)
# -----------------------------
OPENFINANCE_CLIENT_ID=your_provided_client_id
OPENFINANCE_CLIENT_SECRET=your_provided_client_secret
OPENFINANCE_BASE_URL=https://sandbox.openfinance.ae/api/v1

# API Hub Sandbox Version
SANDBOX_VERSION=2025.35.0

# -----------------------------
# TPP Certificates
# (Place certificate files in /certs directory)
# -----------------------------
TRANSPORT_CERT_PATH=./certs/transport.pem
TRANSPORT_KEY_PATH=./certs/transport.key
SIGNING_CERT_PATH=./certs/signing.pem
SIGNING_KEY_PATH=./certs/signing.key

# -----------------------------
# Claude Code Bedrock Configuration
# (AI-Assisted Development - Provided by Nebras)
# -----------------------------
AWS_BEARER_TOKEN_BEDROCK=your_bedrock_api_key
CLAUDE_CODE_USE_BEDROCK=1
AWS_REGION=us-west-2
ANTHROPIC_MODEL=us.anthropic.claude-sonnet-4-20250514-v1:0
CLAUDE_CODE_MAX_OUTPUT_TOKENS=4096
MAX_THINKING_TOKENS=1024

# -----------------------------
# Application Settings
# -----------------------------
NODE_ENV=development
PORT=3000
API_VERSION=v1

# -----------------------------
# OAuth Settings
# -----------------------------
OAUTH_SCOPE=accounts payments insurance
OAUTH_GRANT_TYPE=client_credentials
TOKEN_EXPIRY_BUFFER=300

# -----------------------------
# Rate Limiting
# -----------------------------
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# -----------------------------
# Team Information (for submission)
# -----------------------------
TEAM_NAME=your_team_name
TEAM_ID=your_team_id
PROJECT_NAME=your_project_name